<h2><%= @title = @room.label %></h2>

<div id="room" data-action="<%= room_path(@room, 'json') %>">
  <div class="messages column">
    <table id="messages">
      <tbody>
        <tr>
          <th></th>
          <td><%= link_to 'Earlier messagesâ€¦', room_messages_on_day_path(@room, :day => Date.today) %></td>
        </tr>
        
        <%= render @room.messages %>
      </tbody>
    </table>
    
    <% form_for [@room, Message.new] do |f| %>
      <div class="fields">
        <div class="field"><%= f.text_area :body, :rows => 5, :cols => 80 %></div>
        
        <div class="submit">
          <%= f.submit 'New message' %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="sidebar column">
    <h3>Online:</h3>
    <table id="online_members">
      <tbody>
        <%= render @room.members.online %>
      </tbody>
    </table>
    <%= link_to 'Invite member', new_room_member_path(@room) if @authenticated.admin? %>
  </div>
</div>